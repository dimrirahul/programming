class PairingPawns
{
public:
	int savedPawnCount(vector <int> start)
	{
        int sum = start[0];
        for (int i = start.size() - 1; i >= 1 ; i--) {
            start[i-1] += start[i]/2;
        }
		return start[0];
	}
};

